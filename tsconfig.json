{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./build",
        "strict": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
    },
    "exclude":["./node_modules"],
    "include": ["src/**/*"],
}